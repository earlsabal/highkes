<% @posts.each do |post| %>
  <div class="small_avatar">
    <div align="left">
      <%= render "posts/posted_by", :params => post.user_id %>
    </div>
  </div>

  <%= link_to (image_tag post.image.url(:original)), post %>

  <div align='left'>
    <%= div_for post do %>
      <p>
        <%= render partial: "hearts/like_button", locals: { post: post } %> <%= post.hearts.size %> likes
      </p>
    <% end %>
  </div>
  
  <p>
    <%= post.caption %>
  </p>

  <%= render "posts/date_posted", :post => post %>
  <%= render "posts/poster_options", :post => post %>

<% end %>