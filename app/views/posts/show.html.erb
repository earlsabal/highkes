<img>
	<%= image_tag @post.image.url(:original)%>
</img>

<%= div_for @post do %>
    <p>
        <%= render partial: "likes/like_button_and_date", locals: { post: @post } %> 
    </p>
<% end %>

<p>
    <%= @post.caption %>
</p>

<%= render "poster_options", :post => @post %>
<%= render "comments" %>
<%= render "post_comment" %>