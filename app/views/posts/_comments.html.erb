<h3>Comments</h3>

<% @post.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <% user = User.find(comment.user_id) %>
    <%= user.username %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= simple_format comment.body %>
  </p>

  <% if current_user.id == comment.user_id %>
  	<%= link_to "Delete", [@post, comment], method: :delete, data: {confirm: "Are you sure you want to delete comment ?"} %>
  <% end %>

<% end %>